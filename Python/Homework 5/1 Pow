def stepen(x,y,summ):
     if y<1 or x<2:
          return summ
     summ*=x
     y-=1
     return stepen(x,y,summ)
     
import random
num_1 = random.randint(0,10)           # Загадаем случайное число
num_2 = random.randint(0,10)           # Загадаем случайное число
print(f'Возведём {num_1} в степень {num_2} => {stepen(num_1,num_2,1)}')
